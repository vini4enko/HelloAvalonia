<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="250"
		x:Class="HelloAvalonia.WindowExample"
		WindowStartupLocation="CenterScreen"
		Width="600" Height="500"
		Title="Выбор точки">
	<StackPanel>
		<TextBlock Name="infoText"
				   FontSize="12"
				   Foreground="Gray"
				   HorizontalAlignment="Center"
				   Margin="20, 0, 20, 10"
				   Text="Нажмите кнопку и выберите точку на чертеже"/>
		<Button x:Name="btn"
				FontSize="14"
				FontWeight="SemiBold"
				Margin="20 0 20 10"
				Padding="15 10"
				HorizontalAlignment="Stretch"
				Background="#7FFF22DD"
				Foreground="White"
				Content="Выбрать точку"
				Click="Button_Click"/>
		<TextBox x:Name="txtBox"
				 Watermark="Координаты точки появятся здесь..."
				 />
	</StackPanel>
</Window>
