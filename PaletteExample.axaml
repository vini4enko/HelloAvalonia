<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="90" d:DesignHeight="400"
			 x:Class="HelloAvalonia.PaletteExample"
			 Width="90" Height="400"
			 >
	<DockPanel DockPanel.Dock="Left">
		<StackPanel Margin="10">
			<Button Content="Запустить счётчик"
					Margin="10"
					Background="#0078d7"
					Foreground="White"
					Click="Button_Click"/>
			<Label Content="Результаты:"
				   FontWeight="Bold"
				   Margin="0 0 0 10"/>
			<TextBlock x:Name="table"/>
			<Separator Margin="0 10 0 5"/>
			<TextBlock x:Name="total"
					   Text="Всего:"
					   FontWeight="Bold"/>
		</StackPanel>
	</DockPanel>
</UserControl>
